{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local"],
    "globalEnv": ["NEXT_PUBLIC_ENVIRONMENT_NAME"],
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
        },
        "lint": {},
        "tsc": {},
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}
