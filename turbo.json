{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local"],
    "globalEnv": [
        "NEXT_PUBLIC_ENVIRONMENT_NAME",
        "NEXT_PUBLIC_PROCESS_DETAIL_REFETCH_INTERVAL"
    ],
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
        },
        "test": {},
        "lint": {
            "dependsOn": ["^build"]
        },
        "tsc": {
            "dependsOn": ["^build"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "reset": {
            "dependsOn": ["^reset"]
        }
    }
}
