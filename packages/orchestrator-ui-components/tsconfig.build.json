// https://blog.logrocket.com/publishing-node-modules-typescript-es-modules/
{
    "compilerOptions": {
        "resolveJsonModule": true,
        "jsx": "react-jsx",
        "jsxImportSource": "@emotion/react",
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "strictNullChecks": true,
        "paths": {
            "@/*": ["./src/*"]
        }
    }
}

